@model UserLogin
<h1>Login</h1>
<form asp-action="Login" method="post" class="form-group">
    <p>
        <p><span asp-validation-for="LoginEmail"></span>  </span></p>
        <label asp-for="LoginEmail"></label>
        <input  asp-for="LoginEmail">
    </p>
    <p>
        <p><span asp-validation-for="LoginPassword"></span>  </span></p>
        <label asp-for="LoginPassword"></label>
        <input  asp-for="LoginPassword">
    </p>
    <p>
        <input  type="submit">
    </p>
</form>